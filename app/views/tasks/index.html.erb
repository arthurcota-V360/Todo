<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Completed</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <%= render task %>
            <td style="text-align: right;"><%= link_to "Show", task, class: "btn btn-primary" %></td>
          </tr>
        </div>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New task", new_task_path, class: "btn btn-success" %>